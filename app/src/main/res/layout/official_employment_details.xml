<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textEmployeeInformationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_2C2C2C"
        android:textSize="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:fontFamily="@font/roboto_medium"
        android:text="Official/Employment Details"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_15sdp"
        />







    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textOfficialEmailIDTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_2C2C2C"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/textEmployeeInformationTxt"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:fontFamily="@font/roboto_medium"
        android:text="Official Email ID:"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_15sdp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editOfficialEmailID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        style="@style/PrimaryEditText"
        android:hint="Official Email ID:"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/textOfficialEmailIDTxt"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="0dp"
        android:focusable="false"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textDateOfJoiningTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_2C2C2C"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/editOfficialEmailID"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:fontFamily="@font/roboto_medium"
        android:text="Date of Joining:"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editDateOfJoining"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        style="@style/PrimaryEditText"
        android:hint="Date of joining:"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/textDateOfJoiningTxt"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="0dp"
        android:focusable="false"
        />





    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textUanNumberTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_2C2C2C"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/editDateOfJoining"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:fontFamily="@font/roboto_medium"
        android:text="@string/uanNumberCol"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editUanNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        style="@style/PrimaryEditText"
        android:hint="@string/uanNumberCol"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/textUanNumberTxt"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="0dp"
        android:focusable="false"
        />




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textPreviousEmploymentDetailsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_2C2C2C"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/editUanNumber"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:fontFamily="@font/roboto_medium"
        android:text="Previous Employment Details:"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editPreviousEmploymentDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        style="@style/PrimaryEditText"
        android:hint="Previous Employment Details:"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/textPreviousEmploymentDetailsTxt"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="0dp"
        android:focusable="false"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textWorkExperienceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_2C2C2C"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/editPreviousEmploymentDetails"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:fontFamily="@font/roboto_medium"
        android:text="@string/workExperienceCol"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editWorkExperience"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        style="@style/PrimaryEditText"
        android:hint="@string/workExperienceCol"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/textWorkExperienceTxt"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="0dp"
        android:focusable="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>