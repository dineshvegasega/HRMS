<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/_3sdp"
        android:scrollbarThumbVertical="@color/_E79D46"
        android:fadeScrollbars="false"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_10sdp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textBankNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_9A9A9A"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="Bank Name:"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_2sdp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editBankName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_fade"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/_2C2C2C"
                    app:fontFamily="@font/roboto_medium"
                    android:hint="Bank Name:"
                    android:gravity="end"
                    android:text=""
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="0dp"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@+id/textBankNameTxt"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutAccountHolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layoutBankName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textAccountHolderNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_9A9A9A"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="Account Holder Name:"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_2sdp"
                    />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editAccountHolderName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_fade"
                    android:hint="Account Holder Name:"
                    android:textColor="@color/_2C2C2C"
                    app:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:backgroundTint="@color/white"
                    android:text=""
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:focusable="false"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@+id/textAccountHolderNameTxt"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBankAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layoutAccountHolderName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textBankAccountNumberTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_9A9A9A"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="Bank Account Number:"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_2sdp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editBankAccountNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_fade"
                    android:hint="Bank Account Number:"
                    android:textColor="@color/_2C2C2C"
                    app:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:backgroundTint="@color/white"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:focusable="false"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textBankAccountNumberTxt"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutIFSCCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layoutBankAccountNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textIFSCCodeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_9A9A9A"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="IFSC Code:"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_2sdp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editIFSCCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_fade"
                    android:hint="IFSC Code:"
                    android:textColor="@color/_2C2C2C"
                    app:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:backgroundTint="@color/white"
                    android:text=""
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:focusable="false"
                    app:layout_constraintStart_toEndOf="@+id/textIFSCCodeTxt"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBranchNameAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layoutIFSCCode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textBranchNameAddressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_9A9A9A"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="Branch Name &amp; Address:"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_2sdp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editBranchNameAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_fade"
                    android:hint="Branch Name &amp; Address:"
                    android:textColor="@color/_2C2C2C"
                    app:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:backgroundTint="@color/white"
                    android:text=""
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:focusable="false"
                    app:layout_constraintStart_toEndOf="@+id/textBranchNameAddressTxt"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutAccountType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layoutBranchNameAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textAccountTypeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_9A9A9A"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="Account Type (Savings/Current):"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_2sdp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editAccountType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_fade"
                    android:hint="Account Type (Savings/Current):"
                    android:textColor="@color/_2C2C2C"
                    app:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:backgroundTint="@color/white"
                    android:text=""
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:focusable="false"
                    app:layout_constraintStart_toEndOf="@+id/textAccountTypeTxt"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
















        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>